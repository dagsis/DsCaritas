@model DsCommon.ModelsView.ChangePasswordViewModel

<div class="modal-dialog dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header bg-primary">
            <h5 class="modal-title" id="titleModal">@ViewBag.Title</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form enctype="multipart/form-data" asp-action="CambiarContraseña">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <p class="text-primary">Los campos con asterisco (<span class="required">*</span>) son obligatorios.</p>
                <div class="row">

                    <div class="form-group">
                        <label class="control-label">Contraseña Actual <span class="required">*</span></label>
                        <input class="form-control" asp-for="OldPassword" type="password" placeholder="Ingrese contraseña actual" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nueva Contraseña<span class="required">*</span></label>
                        <input class="form-control" asp-for="NewPassword" type="password" placeholder="Ingrese nueva contraseña" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Confirmar Contraseña<span class="required">*</span></label>
                        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirme contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="tile-footer">
                    <button data-save="modal" class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i><span id="btnText">Aplicar</span></button>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-secondary" href="#" data-bs-dismiss="modal"><i class="fa fa-fw fa-lg fa-times-circle"></i>Salir</a>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
