@model DsCommon.ModelsView.LoginViewModel
@{
    Layout = "~/Views/Shared/AdminLTEAccount/_Layout.cshtml";
}


<div class="row align-items-center justify-content-md-center h-p100">
    <div class="col-12">
        <div class="row justify-content-center g-0">
            <div class="col-lg-5 col-md-5 col-12">
                <div class="bg-white rounded10 shadow-lg">
                    <div class="content-top-agile p-20 pb-0">
                        <h2 class="text-primary">Acceso al Sistema</h2>
                        <p class="mb-0">Caritas. Administración de Panteón.</p>
                    </div>
                    <div class="p-40">
                        <form name="formLogin" id="formLogin" method="post" autocomplete="off">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-transparent"><i class="ti-user"></i></span>
                                    <input asp-for="Email" type="text" class="form-control ps-15 bg-transparent" placeholder="Usuario">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <span class="input-group-text  bg-transparent"><i class="ti-lock"></i></span>
                                    <input input asp-for="Password" type="password" class="form-control ps-15 bg-transparent" placeholder="Contraseña">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="checkbox">
                                        <input type="checkbox" asp-for=Remenberme id="basic_checkbox_1">
                                        <label for="basic_checkbox_1">Recuerdame</label>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-6">
                                    <div class="fog-pwd text-end">                                        
                                        <a asp-action="ForgotPassword" asp-controller="Account" class="hover-warning"><i class="ion ion-locked"></i> Olvido pwd?</a><br>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-danger mt-10">Iniciar Sesión</button>
                                </div>
                                <!-- /.col -->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
